video{
	width: 100%;
	height: 211px;
}

.video-action{
	padding: 10rpx 30rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #999;
  font-size: 22rpx;
}
.video-action .actions{
	position: absolute;
	right: 30rpx;
	display: flex;
  flex-direction: row;
}
.video-action .actions .action{
	padding-left: 30rpx;
}
.video-action image{
	width: 10px;
	height: 10px;
	margin-right: 10rpx;
}
.video-info , .article{
	padding-right: 30rpx;
	padding-left: 30rpx;
  display: flex;
  flex-direction: column;
}
.video-info .title{
	font-weight: bolder;
}
.video-info .statics{
  font-size: 22rpx;
  letter-spacing:.1em;
}

.article .text{
	line-height: 2em;
	text-align:justify
}
.article .quotes{
	border-left: 5px solid #999;
	padding-left: 10rpx;
	margin-bottom: 30rpx;
	margin-top: 30rpx;
}